// tec_script.js - Calcolo e visualizzazione della data TEC
today = new Date();
var oey = today.getFullYear();
var ney = oey - 1969;
var yos = ney % 7;

// Array definiti in soul_powers.js
// noy, moy, dow caricati da soul_powers.js

document.write("<a class='tec_it_1' href='http://earthcal.hyperlinker.org' style='text-decoration: none' target='IlCalendariodellaTerra' title='Il Calendario della Terra'>Oggi Ã¨ " + dow[today.getDay()] + " " + today.getDate() + ", " + moy[today.getMonth()] + ", anno " + ney + ", " + noy[yos] + "</a>");

// Calcolo del giorno dell'anno
var year = today.getFullYear();
var first_day = new Date(year, 0, 1);
var delta = today - first_day;
var day_of_year = Math.floor(delta / 86400000) + 1;

// Visualizzazione del potere dell'animo
document.write("<br><a class='tec_it_2' href='http://earthcal.hyperlinker.org' style='text-decoration: none' target='IlCalendariodellaTerra' title='Il Calendario della Terra'><i>Potere dell'animo del giorno: " + pod[day_of_year] + "</i></a>");
